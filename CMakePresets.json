{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "dev",
      "displayName": "Dev",
      "description": "Debug build with tests and examples",
      "binaryDir": "${sourceDir}/build/dev",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "ENTROPY_BUILD_TESTS": "ON",
        "ENTROPY_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "release",
      "displayName": "Release",
      "description": "Release build with tests and examples",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENTROPY_BUILD_TESTS": "ON",
        "ENTROPY_BUILD_EXAMPLES": "ON"
      }
    },
    {
      "name": "bench",
      "displayName": "Benchmarks",
      "description": "Release build for benchmarks",
      "binaryDir": "${sourceDir}/build/bench",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "ENTROPY_BUILD_BENCHMARKS": "ON",
        "ENTROPY_BENCH_COMPARE_SQLITE": "ON",
        "ENTROPY_BUILD_TESTS": "OFF",
        "ENTROPY_BUILD_EXAMPLES": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "dev",
      "configurePreset": "dev"
    },
    {
      "name": "release",
      "configurePreset": "release"
    },
    {
      "name": "bench",
      "configurePreset": "bench"
    }
  ],
  "testPresets": [
    {
      "name": "dev",
      "configurePreset": "dev",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "release",
      "configurePreset": "release",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
